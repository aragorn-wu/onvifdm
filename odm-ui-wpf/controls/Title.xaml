<ContentControl x:Class="odm.controls.Title"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:l="clr-namespace:odm.controls"
	mc:Ignorable="d" 
	Content="Title">

	<ContentControl.Template>
		<ControlTemplate TargetType="{x:Type ContentControl}">
			<Border CornerRadius="3" Margin="0" BorderThickness="1" BorderBrush="Black">
				<Border.Background>
					<LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
						<GradientStop Color="#FFD8D8D8" Offset="0" />
						<GradientStop Color="White" Offset="1" />
					</LinearGradientBrush>
				</Border.Background>
				<Label Margin="4" VerticalAlignment="Center" Padding="0" Content="{TemplateBinding Content}"/>
			</Border>
		</ControlTemplate>
	</ContentControl.Template>
	
</ContentControl>
