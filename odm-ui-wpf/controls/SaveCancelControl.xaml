<UserControl x:Class="odm.controls.SaveCancelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 x:Name="ctrl"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="212">
    <StackPanel Orientation="Horizontal">
		<Button Name="btnSave" Content="Save" Margin="0,0,6,0" HorizontalAlignment="Left"/>
		<Button Name="btnCancel" Content="Cancel" Margin="0,0,6,0" HorizontalAlignment="Left"/>
	</StackPanel>
</UserControl>
