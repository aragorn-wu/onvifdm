<UserControl x:Class="odm.controls.DeviceControl"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:my="clr-namespace:odm.controls"
	mc:Ignorable="d">
	
	<StackPanel>
		<my:Title x:Name="title" VerticalAlignment="Top" />
		<StackPanel Orientation="Horizontal">
			<Image Height="128" HorizontalAlignment="Left" Name="_deviceImage" Stretch="Uniform" VerticalAlignment="Top" Width="128" Margin="3" />
			<StackPanel Margin="3" Name="_deviceLinksPanel" />
		</StackPanel>
        
	</StackPanel>
</UserControl>
