<UserControl x:Class="odm.ui.controls.DeviceControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="clr-namespace:odm.ui.controls">
    <my:ControlDevice x:Name="title">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="2,1,2,2">
            <Image Height="128" HorizontalAlignment="Left" Name="_deviceImage" Stretch="Uniform" VerticalAlignment="Top" Width="128" Margin="3" />
            <StackPanel Margin="3" Name="_deviceLinksPanel" />
        </StackPanel>
    </my:ControlDevice>
</UserControl>
