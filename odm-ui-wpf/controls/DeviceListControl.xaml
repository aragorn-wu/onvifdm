<UserControl x:Class="odm.controls.DeviceListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="306" d:DesignWidth="231" xmlns:my="clr-namespace:odm.controls">
    <DockPanel>
        <my:Title x:Name="_title" DockPanel.Dock="Top" Margin="0,0,0,6"/>
		<Button x:Name="_refreshBtn" DockPanel.Dock="Bottom" Margin="0,0,0,0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Content="Button" Click="_refreshBtn_Click"  Style="{StaticResource CommonButtonStyle}"  />
		<Border x:Name="border1" Margin="0,0,0,6" BorderBrush="Black" BorderThickness="1" CornerRadius="2"  >
            <DataGrid Margin="2"  AutoGenerateColumns="False" Name="_dataGrid" Style="{StaticResource FlatGridStyle}" CanUserReorderColumns="False" HeadersVisibility="Column" ColumnHeaderStyle="{DynamicResource FlatGridHeaderStyle}" IsReadOnly="True"/>
        </Border>
		
	</DockPanel>
</UserControl>
