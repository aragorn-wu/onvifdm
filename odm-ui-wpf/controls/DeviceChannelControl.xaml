<UserControl x:Class="odm.ui.controls.DeviceChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="clr-namespace:odm.ui.controls">
    <my:ControlDeviceChannel x:Name="title" Margin="0,6,0,0">
        <StackPanel>
            <StackPanel Name="infoBar" Visibility="Visible">
                <TextBlock Name="infoCaption" Margin="6"/>
                <ProgressBar IsIndeterminate="True" Height="16" Margin="6"/>
            </StackPanel>
            <StackPanel Name="content" Orientation="Horizontal" Margin="3" Visibility="Collapsed">
                <Image Height="128" HorizontalAlignment="Left" Name="_img" Stretch="Uniform" VerticalAlignment="Top" Width="128" Margin="3" />
                <StackPanel x:Name="_channelLinksPanel" Margin="3" DockPanel.Dock="Right"/>
            </StackPanel>
        </StackPanel>
    </my:ControlDeviceChannel>
</UserControl>
