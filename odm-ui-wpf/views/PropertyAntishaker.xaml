<Local:BasePropertyControl x:Class="odm.ui.controls.PropertyAntishaker"
             xmlns:Local="clr-namespace:odm.ui.controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" xmlns:my="clr-namespace:odm.ui.controls.GraphEditor">
    <Local:ContentColumn x:Name="title" Background="{DynamicResource ResourceKey=PropertyBrush}">
        <Local:ContentColumn.Footer>
            <Local:SaveCancelControl x:Name="saveCancel"/>
        </Local:ContentColumn.Footer>
        <Grid>
            <Grid Margin="0,20,0,25" MinWidth="100">
                <Local:VideoPlayer Margin="6,6,6,6" x:Name="player" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                <my:RectangleEditor x:Name="region"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>
    </Local:ContentColumn>
</Local:BasePropertyControl>
