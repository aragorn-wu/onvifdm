<Window x:Class="odm.ui.controls.PropertyDepthCalibrationSTA"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="300" Width="300" xmlns:my="clr-namespace:odm.ui.controls" xmlns:my1="clr-namespace:odm.ui.controls.GraphEditor" ResizeMode="NoResize" ShowInTaskbar="False" WindowState="Maximized" WindowStyle="None">
    <Grid Background="Black">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <my:PropertyDepthCalibrationSTAcontrol x:Name="uiControl" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0"/>
        <my:VideoPlayer x:Name="_videoPlayer" Grid.Column="1" Margin="0"/>
		<Viewbox x:Name="box" Grid.Column="1">
			<Canvas Name="markerHolder">
				<my1:RegionEditor x:Name="regionEditor" Canvas.Left="0" Canvas.Top="0"/>
				<!--<Canvas Name="markerHolder"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>-->
			</Canvas>
		</Viewbox>
	</Grid>
</Window>