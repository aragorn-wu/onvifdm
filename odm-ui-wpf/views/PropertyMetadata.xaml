<Local:BasePropertyControl x:Class="odm.ui.controls.PropertyMetadata"
             xmlns:Local="clr-namespace:odm.ui.controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Local:ContentColumn x:Name="title" Background="{DynamicResource ResourceKey=PropertyBrush}">
        <DockPanel VerticalAlignment="Stretch">
            <Grid>
                <Label Margin="0,6,0,0" Name="emptyCaption"/>
                <TextBox Margin="0,6,0,0" VerticalAlignment="Stretch" Name="metaBox" IsReadOnly="True" Visibility="Hidden"/>
            </Grid>
        </DockPanel>
    </Local:ContentColumn>
</Local:BasePropertyControl>
